<%- model_class = DpiChapter -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:dpi_tag) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @dpi_chapters.each do |dpi_chapter| %>
      <tr>
        <td><%= link_to dpi_chapter.id, dpi_chapter_path(dpi_chapter) %></td>
        <td><%= dpi_chapter.title %></td>
        <td><%= dpi_chapter.dpi_tag %></td>
        <td><%= dpi_chapter.description %></td>
        <td><%=l dpi_chapter.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_dpi_chapter_path(dpi_chapter), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      dpi_chapter_path(dpi_chapter),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_dpi_chapter_path,
            :class => 'btn btn-primary' %>
