<h2>Resend confirmation instructions</h2>

<%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => {:method => :post, :class => 'form-vertical' }) do |f| %>
 	<%= devise_error_messages! %>
  <div class="form-inputs">
    <%= f.input :email, input_html: { class: "input-xlarge", placeholder: "Email Address" }, :autofocus => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary', :label => 'Resend Confirmation' %>
  </div>
<% end %>

<%= render "links" %>

