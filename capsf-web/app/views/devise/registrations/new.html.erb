<h2>Sign up</h2>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html:{class:'form-vertical'}) do |f| %>
  	<div class="form-inputs">
    	<%= f.input :email, input_html:{ class: '', placeholder: 'Email'}, :required => false, :autofocus => true%>
    	<%= f.input :password, input_html:{ class: '', placeholder: 'Password'}, :required => false%>
    	<%= f.input :password_confirmation, input_html:{ class: '', placeholder: 'Re-enter Password'}%>
  	</div>
    <%= recaptcha_tags :public_key => '6LcZ8dMSAAAAAEKxlmOsAUIhPM3s1oWkGWx_N7QD', :error =>'Bad Recaptcha Solution!'  %>

  	<div class="form-actions">
    	<%= f.button :submit,"Sign Up", :class => "btn btn-primary", :label =>"Sign Up" %>
  	</div> 
<% end %>

