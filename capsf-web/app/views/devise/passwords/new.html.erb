<h2>Forgot your password?</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-vertical' }) do |f| %>
	<%= devise_error_messages! %>
	<div class="form-inputs">
		<%= f.input :email %>
	</div>
	
	<div class="form-actions">
		<%= f.button :submit, :class => "btn btn-primary", :label => "Send me reset password instructions" %>
	</div>
<% end %>

<%= render "links" %>

