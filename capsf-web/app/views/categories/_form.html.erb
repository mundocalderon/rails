<%= simple_form_for @category, :html => { :class => 'form-vertical' } do |f| %>
  <%= f.input :name, input_html: { class: "input-xlarge", placeholder: "Category Name" } %>
  <%= f.input :description, :as => :text, input_html: { rows: 8, class: "input-xlarge", placeholder: "Category Description" } %>
  <% f.input :slug %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                categories_path, :class => 'btn' %>
  </div>
<% end %>
