<%- model_class = Brief -%>
<% content_for :top do %>
  <h2><%=t '.title', :default => model_class.model_name.human.titleize %></h2>
<% end %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%= @brief.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd><%= @brief.last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:brief_court_id) %>:</strong></dt>
  <dd><%= @brief.brief_court._name%></dd>
  <dt><strong><%= model_class.human_attribute_name(:brief_division_id) %>:</strong></dt>
  <dd><%= @brief.brief_division_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:brief_source_id) %>:</strong></dt>
  <dd><%= @brief.brief_source_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:brief_type_id) %>:</strong></dt>
  <dd><%= @brief.brief_type_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @brief.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_filed) %>:</strong></dt>
  <dd><%= @brief.date_filed %></dd>
  <dt><strong><%= model_class.human_attribute_name(:isAtkins) %>:</strong></dt>
  <dd><%= @brief.isAtkins %></dd>
  <dt><strong><%= model_class.human_attribute_name(:isExhibit) %>:</strong></dt>
  <dd><%= @brief.isExhibit %></dd>
	<dt><strong>Brief File:</strong></dt>
	<dd><%= link_to "Download", @brief.doc_url.to_s %>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")), :back, :class => 'btn' %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_brief_path(@brief), :class => 'btn btn-info'  if current_user.admin? %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")), brief_path(@brief), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' if current_user.super_admin? %>
</div>
