<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html:{ class: 'form-vertical'}) do |f| %>
	<h2>Sign in</h2>
	<div class="form-inputs">
    	<%= f.input :email, input_html:{ class: '', placeholder: 'Email'}, :required => false, :autofocus => true %>
    	<%= f.input :password, input_html:{ class: '', placeholder: 'Password'}, :required => false%>
     	<%= f.input :remember_me, input_html: { class: 'btn btn-large btn-primary' }, :as => :boolean if devise_mapping.rememberable?%>
   	</div>
	<div class="form-actions">
     	<%= f.button :submit, "Sign in", :class => 'btn btn-primary', :label =>"Sign in" %>
   	</div>
<% end %>

<%= render "links" %>
