

<%= simple_form_for(resource, :as => resource_name, html:{ class: 'form-signin',  :method => :post  }, :url => password_path(resource_name)) do |f| %>
<h2>Forgot your password?</h2>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, input_html:{ class: 'input-block-level', placeholder: 'Email'}, label: false, :required => true, :autofocus => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions", :class => 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
