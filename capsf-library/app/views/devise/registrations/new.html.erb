<%= simple_form_for(resource, :as => resource_name, html:{ class: 'form-signin' }, :url => registration_path(resource_name)) do |f| %>
<h2>Sign up</h2>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, input_html:{ class: 'input-block-level', placeholder: 'Email'}, label: false,  :required => true, :autofocus => true %>
    <%= f.input :password, input_html:{ class: 'input-block-level', placeholder: 'Password'}, label: false, :required => true %>
    <%= f.input :password_confirmation, input_html:{ class: 'input-block-level', placeholder: 'Confirm Password'}, label: false, :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", :class => 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
