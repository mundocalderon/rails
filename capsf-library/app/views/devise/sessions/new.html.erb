<%= simple_form_for(resource, :as => resource_name, html:{ class: 'form-signin' }, :url => session_path(resource_name )) do |f| %>
<h2>Sign in</h2>
  <div class="form-inputs">
    <%= f.input :email, input_html:{ class: 'input-block-level', placeholder: 'Email'}, label: false, :required => false, :autofocus => true %>
    <%= f.input :password, input_html:{ class: 'input-block-level', placeholder: 'Password'}, label: false, :required => false %>
    <%= f.input :remember_me, input_html: { class: 'btn btn-large btn-primary' }, label:false, inline_label: 'Yes, remember me', :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in", :class => 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
