<%- model_class = Transaction -%>
<div class="page-header">
  <h1>User History</h1>
</div>
<h3> Books Checked Out </h3>
<% if @users_books.nil? || @users_books.empty? %>
  <p class="lead text-center muted">Looks like you don't have any Books checked out! </p>
<% else %>
	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th><%= model_class.human_attribute_name(:title) %></th>
	      <th><%= model_class.human_attribute_name(:location) %></th>
	      <th><%=t '.actions', :default => t("helpers.actions") %></th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @users_books.each do |book| %>
	      <tr data-provides="rowlink">
	        <td><%= link_to book.title, book_path(book), :class => 'rowlink' %></td>
	        <td><%= book.location %></td>
	        <td class="nolink">
			  <%= link_to "Check Out", 
			 			  checkout_path(book),
			 			  :class => 'btn btn-info' %>
			  <%= link_to "Return", 
						  return_path(book), 
						  :class => 'btn btn-danger' %>
         
	 		  <% link_to t('.edit', :default => t("helpers.links.edit")),
	                      edit_book_path(book), :class => 'btn btn-mini' %>
	          <% link_to t('.destroy', :default => t("helpers.links.destroy")),
	                      book_path(book),
	                      :method => :delete,
	                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
	                      :class => 'btn btn-mini btn-danger' %>
	        </td>
	      </tr>
	    <% end  %>
	  </tbody>
	</table>
<% end %>
<hr>
<h3> Book Transactions </h3>
<table class="table table-striped">
  <thead>
    <tr>    
	  <th><%= model_class.human_attribute_name(:book_id) %></th>
      <th><%= model_class.human_attribute_name(:date_of_issue) %></th>
      <th><%= model_class.human_attribute_name(:date_of_return) %></th>
    </tr>
  </thead>
  <tbody>
    <% @users_transactions.each do |transaction| %>
      <tr>
		<td><%= transaction.book.title %></td>
        <td><%= transaction.date_of_issue %></td>
        <td><%= transaction.date_of_return %></td>
      </tr>
    <% end %>
  </tbody>
</table>




<% link_to t('.new', :default => t("helpers.links.new")),
            new_transaction_path,
            :class => 'btn btn-primary' %>
