<%- model_class = Book -%>
<div class="page-header">
  <h1><%= @book.title %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @book.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:publication_type) %>:</strong></dt>
  <dd><%= @book.publication_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_of_publication) %>:</strong></dt>
  <dd><%= @book.date_of_publication %></dd>
  <dt><strong><%= model_class.human_attribute_name(:published_by) %>:</strong></dt>
  <dd><%= @book.published_by %></dd>
  <dt><strong><%= model_class.human_attribute_name(:edition) %>:</strong></dt>
  <dd><%= @book.edition %></dd>
  <dt><strong><%= model_class.human_attribute_name(:number_of_copies) %>:</strong></dt>
  <dd><%= @book.number_of_copies %></dd>
  <dt><strong>Copies Available:</strong></dt>
  <dd><%= @book.copies_available%>
  <dt><strong><%= model_class.human_attribute_name(:volume) %>:</strong></dt>
  <dd><%= @book.volume %> </dd>
  <dt><strong><%= model_class.human_attribute_name(:citation) %>:</strong></dt>
  <dd><%= @book.citation %> </dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @book.location %></dd>
  <dt><strong>Authors:</strong></dt>
  <dd><ul class='contributor-list'><% @book.contributors.each do |c| %>
	  <li><%= c.name %></li> 
	  <% end %></ul></dd>
	  <dt><strong>Editors:</strong></dt>
	  <dd><ul class='contributor-list'><% @book.editors.each do |e| %>
		  <li><%= e.name %></li> 
		  <% end %></ul></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              books_path, :class => 'btn'  %>
  <%= link_to "Check Out", 
    		  checkout_path(@book),
    		  :class => 'btn btn-info' %>
  <%= link_to "Return", 
    		  return_path(@book), 
  			  :class => 'btn btn-danger' %>
  <% link_to t('.edit', :default => t("helpers.links.edit")),
              edit_book_path(@book), :class => 'btn' %>
  <% link_to t('.destroy', :default => t("helpers.links.destroy")),
              book_path(@book),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
