<%- model_class = Gig -%>
<div class="container">
	<div class="row">
    	<div class="col-md-12">			
			<div class="page-header">
			  <h1>Show</h1>
			</div>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
    	<div class="col-md-12">			
			<dl class="dl-horizontal">
			  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
			  <dd><%= @gig.date %></dd>
			  <dt><strong><%= model_class.human_attribute_name(:venue) %>:</strong></dt>
			  <dd><%= @gig.venue %></dd>
			  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
			  <dd><%= @gig.location %></dd>
			  <dt><strong><%= model_class.human_attribute_name(:details) %>:</strong></dt>
			  <dd><%= @gig.details %></dd>
			  <dt><strong><%= model_class.human_attribute_name(:link) %>:</strong></dt>
			  <dd><%= link_to @gig.venue, url_with_protocol(@gig.link), :target => :blank %></dd>
			</dl>
			
			<% if current_user %>
			<%= link_to t('.back', :default => t("helpers.links.back")),
			              gigs_path, :class => 'btn btn-default'  %>
			<%= link_to t('.edit', :default => t("helpers.links.edit")),
			              edit_gig_path(@gig), :class => 'btn btn-default' %>
			<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
			              gig_path(@gig),
			              :method => 'delete',
			              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
			              :class => 'btn btn-danger' %>
			<% end %>
						  
		</div>
	</div>
</div>