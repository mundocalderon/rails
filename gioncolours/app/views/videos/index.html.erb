<%- model_class = Video -%>
<div class="container">
	<div class="row">
    	<div class="col-md-12">
			
			<div class="page-header">
			  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
			</div>
			<table class="table table-striped">
			  <thead>
			    <tr>
			      <th><%= model_class.human_attribute_name(:title) %></th>
			      <th><%= model_class.human_attribute_name(:description) %></th>
			      <th><%= model_class.human_attribute_name(:video_url) %></th>
				  <th>Video Category</th>
			    </tr>
			  </thead>
			  <tbody>
			    <% @videos.each do |video| %>
			      <tr>
			        <td class="col-xs-3"><%= link_to video.title, video_path(video) %></td>
			        <td class="col-xs-7"><%=raw video.description %></td>
			        <td class="col-xs-2"><%= link_to "youtube link", video.video_url %></td>
					<td class="col-xs-2"><%= video.video_types.map{ |t| t.title }.join(",") %></td>
			        
			      </tr>
			    <% end %>
			  </tbody>
			</table>

			<%= link_to t('.new', :default => t("helpers.links.new")),
			            new_video_path,
			            :class => 'btn btn-primary' %>
		</div>
	</div>
</div>
