<%- model_class = Announcement -%>
<div class="container">
	<div class="row">
		<div class="col-md-2"></div>
		<div class="col-md-8">
			<div class="page-header">
			  <h1><%= @announcement.title %></h1>
			</div>
			
			<p><%=raw @announcement.content %></p>
			
			<p class="pull-right"><small> this was news on: <%= @announcement.post_date %></small></p>
			
			<div class="announcement-attachment">
				<%= image_tag @announcement.attachment.url, :class => "img-responsive center-block" %>
			</div>
			<br>
			<hr>
			<% if current_user %>
			
			<div class="action-buttons">
			<%= link_to t('.back', :default => t("helpers.links.back")),
			              announcements_path, :class => 'btn btn-default'  %>
			<%= link_to t('.edit', :default => t("helpers.links.edit")),
			              edit_announcement_path(@announcement), :class => 'btn btn-default' %>
			<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
			              announcement_path(@announcement),
			              :method => 'delete',
			              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
			              :class => 'btn btn-danger' %>
			</div>
			<% end %>
	  </div>
	  <div class="col-md-2"></div>
  </div>

  
</div>
