<div class="container">
	<div class="row">
    	<div class="col-md-5">
			<%= simple_form_for @user do |f| %>
				<h1>Sign Up</h1>
				<div class="form-inputs">
					<%= f.input :username %>
			    	<%= f.input :password %>
			    	<%= f.input :password_confirmation %>
			  	</div>
			  	<div class="form-actions">
					<%= f.button :submit, "Sign Up", :class => "btn btn-primary" %>
			  	</div>
			<% end %>
		</div>
	</div>
</div>