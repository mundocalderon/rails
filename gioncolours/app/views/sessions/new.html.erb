<div class="container">
	<div class="row">
    	<div class="col-md-5">
			<%= simple_form_for :sessions, :url => sessions_path, :html => {:class => 'form-vertical'} do |f| %>
				<h1>Log In</h1>
				<div class="form-inputs">
					<%= f.input :username %>
			    	<%= f.input :password %>
			  	</div>
			  	<div class="form-actions">
					<%= f.button :submit, "Log In" %>
			  	</div>
			<% end %>
		</div>
	</div>
</div>