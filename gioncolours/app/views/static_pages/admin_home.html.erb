<div class="container">
	<hr>
	<div class="row">
		<% @announcements.each do |announcement| %>
    	<div class="col-xs-4">	
			<div class="announcement-thumbnail">
				<%= link_to (image_tag announcement.attachment.url(:thumb), :class => "announcement-img img-responsive"), announcement %>
				<div class="img-title">
					<h5><%= link_to announcement.title, announcement %></h5>
				</div>
			</div>
		</div>
		<% end %>
	</div><!--/row /news -->
	
	<hr>
	<span class="glyphicon glyphicon-calendar"></span> <!-- SHOWS -->
	<div class="row">
    	<div class="col-md-12">

			<table class="table table-bordered">
			  <thead>
			    <tr>
			      <th>Date </th>
			      <th>Location </th>
			      <th>Venue </th>
			      <th>Details </th>
				  
			    </tr>
			  </thead>
			  	<% if !@gigs.empty? %>
			  	<tbody>
				    <% @gigs.each do |gig| %>
				      <tr>
				        <td class="col-xs-2"><%= link_to gig.date.strftime("%m/%d/%Y"), gig %></td>
				        <td class="col-xs-2"><%= gig.location %></td>
				        <td class="col-xs-2"><%= if !gig.link.blank? then link_to gig.venue,url_with_protocol(gig.link), :target => :blank else gig.venue end %></td>
				        <td class="col-xs-6"><%= gig.details %> <%= if gig.with_tpc? then image_tag "/images/swirl-icon.png", :class => "responsive-img" end %> </td>
					
				      </tr>
				    <% end %>
			  </tbody>

			</table>
		  <% else %>
		  </table>
		  <p>No Upcoming Dates</p>
		  <% end %>
		</div>
	</div><!--/row /shows -->
	
	<hr>
	<!-- h4><em>Videos</em></h4> <!--------- Videos ---------->
	<% @videos.each do |vid| %>
	<div class="row">
		<div class="col-xs-12">
			<div class="video-container">
				<iframe src="https://www.youtube.com/embed/<%= youtube_id(vid.video_url) %>" frameborder="0" allowfullscreen></iframe>
			</div>
		</div>
	</div>
	
	<div class="row">	
	    <div class="col-xs-12">
			  <h1><%= vid.title %></h1>
			  <p><%=raw vid.description%></p>
		</div>
	</div>
	<div class="spacing-container"></div>
	<% end %>
