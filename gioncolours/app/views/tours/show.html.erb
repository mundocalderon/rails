<div class="container">
	<div class="row">
    	<div class="col-md-12">	
			<h1><%= @tour.title %></h1>
			<p class="lead no-bottom-margin"><%= @tour.description %></p>
			<p><strong>Tour starts on:</strong>
			<%= @tour.date_begin %>
			<strong>ends on:</strong>
			<%= @tour.date_end %>
			</p>

			<div class="row">
		    	<div class="col-md-10">
					<div class="panel panel-info">
						<div class="panel-heading"><h2>Gigs on this tour</h2></div>
						<table class="table table-striped">
						  <thead>
						    <tr>
						      <th>Date</th>
						      <th>Venue</th>
						      <th>Location</th>
						      <th>Details</th>
						    </tr>
						  </thead>
						  <tbody>
						    <% @tour.gigs.each do |gig| %>
						      <tr>
						        <td><%= gig.date %></td>
						        <td><%= if !gig.link.blank? then link_to gig.venue,url_with_protocol(gig.link), :target => :blank else gig.venue end %></td>
						        <td><%= gig.location %></td>
						        <td><%= gig.details %></td>
						      </tr>
						    <% end %>
						  </tbody>
						</table>
					</div>
				</div>
			</div>





<%= link_to t('.back', :default => t("helpers.links.back")),
              tours_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tour_path(@tour), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tour_path(@tour),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
		</div>
	</div>
</div>
