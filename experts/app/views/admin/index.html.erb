<%- model_class = User %>
<div class="page-header">
	<h1>Users</h1>
</div>

<table class="table table-striped">
	<thead>
    <tr>
		 <th>User Id</th>
		 <th>Email</th>
		 <th>Role</th>
		 <th>Created On</th>
		 <th>Confirmed At</th>
		</tr>
	</thead>
	<tbody>
  		<% @users.each do |user| %>
  			<tr>
			    <td><%= link_to user.id, profile_path(user) %></td>
			    <td><%= link_to user.email, profile_path(user) %></td>
			    <td><%= user.role %></td>
			    <td><%= user.created_at.strftime('%B %d, %Y') %></td>
			    <td><%= user.confirmed_at.try(:strftime,'%B %d, %Y')%></td>
				<td><%= link_to 'Edit', admin_edit_user_path(user.id), :class => 'btn btn-mini' %>
    				<%= link_to 'Destroy', admin_destroy_user_path(user.id), confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini btn-danger' %></td>
  			</tr>
  		<% end %>
	</tbody>
</table>



