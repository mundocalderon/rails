<%- model_class = Addres -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:line_1) %>:</strong></dt>
  <dd><%= @address.line_1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:line_2) %>:</strong></dt>
  <dd><%= @address.line_2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @address.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @address.state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zip_code) %>:</strong></dt>
  <dd><%= @address.zip_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:addr_status) %>:</strong></dt>
  <dd><%= @address.addr_status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active_date_from) %>:</strong></dt>
  <dd><%= @address.active_date_from %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active_date_to) %>:</strong></dt>
  <dd><%= @address.active_date_to %></dd>
  <dt><strong><%= model_class.human_attribute_name(:county) %>:</strong></dt>
  <dd><%= @address.county %></dd>
  <dt><strong><%= model_class.human_attribute_name(:person_id) %>:</strong></dt>
  <dd><%= @address.person_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              addresses_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_address_path(@address), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              address_path(@address),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
