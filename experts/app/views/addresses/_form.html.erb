<%= form_for @address, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :line_1, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :line_1, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :line_2, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :line_2, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :city, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :city, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :state, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :state, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :zip_code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :zip_code, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :addr_status, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :addr_status, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :active_date_from, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :active_date_from, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :active_date_to, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :active_date_to, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :county, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :county, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :person_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :person_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                addresses_path, :class => 'btn' %>
  </div>
<% end %>
