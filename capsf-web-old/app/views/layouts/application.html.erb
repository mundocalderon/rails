      <%= stylesheet_link_tag 'iepatch7' %>
    <![endif]-->
    <!--[if IE 6]>
      <%= stylesheet_link_tag 'iepatch6' %>
    <![endif]-->

    <% flash.each do |name, msg|  %>
      <script type="text/javascript">
        $(document).ready(function() { status_update('<%= msg %>') });
      </script>
    <% end %>

    <script type="text/javascript">
      var RecaptchaOptions = {
        theme: 'white'
      };
    </script>

  </head>


<body>
<div id="main">
  <div id="header"> 
    <h1 id="logo"><span class="logo"><%= link_to "", root_path %></span></h1>
    <hr class="noscreen" />

  </div>

  <div id="tray"> 
    <% if current_user && current_user.role.eql?("Admin") %>
      <%= link_to "Administrator Links", admin_links_path %>
    <% end %>
    
    <% if  user_signed_in? %>
      Logged in as <%= current_user.email %>.
