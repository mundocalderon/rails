          <% (Category.all).each do |link| %>
            <li><%= link_to "#{link.name}", entries_path(:category =>"#{link.slug}") %></li>
          <% end %>
          <li> <%= link_to "Brief Bank", entries_path(:category => "briefbank") %></li>
          <li> <% link_to "Browse", search_path %></li>
        </ul>

        <div class="pad">
          <ul class="nav-search">
            <li> <%= link_to "Advanced Search", advanced_search_path %></li>
          </ul>
        </div>
          
          <!--li><%= link_to "News Updates", root_path %></li>
          <li> <%= link_to "CAP", entries_path(:category =>"starting") %></li>
