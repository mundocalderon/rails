          <li> <%= link_to "Website Map", entries_path(:category => "pleadings") %></li>
          <li> <%= link_to "CAP News and Website Updates", entries_path(:category => "investigating") %></li>
          <li> <%= link_to "CAP Wiki", entries_path(:category => "briefbank") %></li>
          <li> <%= link_to "State Habeas Practice", entries_path(:category => "federal") %></li>
          <li> <%= link_to "Appellate Practice", entries_path(:category => "administrative") %></li>
          <li> <%= link_to "Specialty Areas", entries_path(:category => "administrative") %></li>
          <li> <%= link_to "Late State/Clemency", entries_path(:category => "administrative") %></li>
          <li> <%= link_to "CAP Publications", entries_path(:category => "administrative") %></li>
          <li> <%= link_to "San Quentin and Prison Resources", entries_path(:category => "administrative") %></li>
          <li> <%= link_to "CA Supreme Court", entries_path(:category => "administrative") %></li>
          <li> <%= link_to "Training", entries_path(:category => "administrative") %></li-->
       
        
        </ul>
      <% else %>
        <ul class="nav">
          <li> <%= link_to "Home", root_path %></li>
          <li> <%= link_to "Login", new_user_session_path %></li>
          <li> <%= link_to "Information", info_path%></li>
          <li> <%= link_to "Employment", employment_path%></li>
          <li> <%= link_to "Contact", contact_path %></li>
          <li> <%= link_to "Register", new_user_registration_path %></li>
        </ul> 
      <% end %>
    </div>

    <div id="aside-bottom"></div>
  </div>
 

  <div id="footer">
    <p class="f-right"><%= link_to "Disclosure", disclosure_path %> <%= link_to "Privacy Policy", privacy_path%>  </p>
    <p>Copyright &copy;&nbsp; 2012, All Rights Reserved. </p>
  </div>

</div>


