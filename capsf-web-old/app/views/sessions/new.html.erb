  <div id="content-left-in">
      <h2>Sign in</h2>
      <%= semantic_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <%= f.inputs do %>
          <%= f.input :email %>
          <%= f.input :password %>
          <%= f.input :remember_me, :as => :boolean %>
        <% end %>
        <%= f.actions do %>
          <%= f.action :submit, :as =>:button, :label =>"Sign in" %>
        <% end %>
      <% end %>
      
